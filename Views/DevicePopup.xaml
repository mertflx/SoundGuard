<Window x:Class="SoundGuard.Views.DevicePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Width="340"
        SizeToContent="Height"
        MaxHeight="500"
        Deactivated="Window_Deactivated"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Easing Function (StaticResource olarak Ã¶nce tanÄ±mlanmalÄ±) -->
        <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>

        <!-- Toggle Switch Stili -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Background"
                                    CornerRadius="11"
                                    Background="#3A3A3A"
                                    BorderThickness="0"/>
                            <Border x:Name="Thumb"
                                    Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="#888888"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0"
                                    VerticalAlignment="Center">
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="ThumbTranslate" X="0"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTranslate"
                                                             Storyboard.TargetProperty="X"
                                                             To="22" Duration="0:0:0.15"
                                                             EasingFunction="{StaticResource EaseOut}"/>
                                            <ColorAnimation Storyboard.TargetName="Background"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#4CAF50" Duration="0:0:0.15"/>
                                            <ColorAnimation Storyboard.TargetName="Thumb"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#FFFFFF" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTranslate"
                                                             Storyboard.TargetProperty="X"
                                                             To="0" Duration="0:0:0.15"
                                                             EasingFunction="{StaticResource EaseOut}"/>
                                            <ColorAnimation Storyboard.TargetName="Background"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#3A3A3A" Duration="0:0:0.15"/>
                                            <ColorAnimation Storyboard.TargetName="Thumb"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#888888" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="Background" Value="#454545"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Spinner Style -->
        <Style x:Key="SpinnerStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="StrokeThickness" Value="3"/>
            <Setter Property="Stroke" Value="#4CAF50"/>
            <Setter Property="StrokeDashArray" Value="3 2"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
    </Window.Resources>

    <!-- Ana Container -->
    <Border CornerRadius="12"
            Background="#1E1E1E"
            BorderBrush="#333333"
            BorderThickness="1"
            Margin="8"
            Padding="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              BlurRadius="16" 
                              ShadowDepth="4" 
                              Opacity="0.5"
                              Direction="270"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- BaÅŸlÄ±k -->
            <Border Grid.Row="0" 
                    Background="#252525" 
                    CornerRadius="12,12,0,0"
                    Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="ðŸŽ§"
                               FontSize="18"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="SoundGuard"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="Bluetooth HFP YÃ¶neticisi"
                                   FontSize="10"
                                   Foreground="#888888"
                                   Margin="0,1,0,0"/>
                    </StackPanel>

                    <Button x:Name="RefreshButton"
                            Grid.Column="2"
                            Content="âŸ³"
                            FontSize="16"
                            Width="30" Height="30"
                            Background="Transparent"
                            Foreground="#AAAAAA"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Yenile"
                            Click="RefreshButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bg" Background="Transparent" CornerRadius="6" Padding="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bg" Property="Background" Value="#333333"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Cihaz Listesi -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0">
                <StackPanel x:Name="DeviceList" Margin="8,4,8,4"/>
            </ScrollViewer>

            <!-- BoÅŸ Durum MesajÄ± -->
            <StackPanel x:Name="EmptyState"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="20"
                        Visibility="Collapsed">
                <TextBlock Text="ðŸ“¡"
                           FontSize="32"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Hands-Free cihaz bulunamadÄ±"
                           FontSize="12"
                           Foreground="#888888"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
                <TextBlock Text="Bluetooth kulaklÄ±ÄŸÄ±nÄ±zÄ±n eÅŸleÅŸtiÄŸinden&#x0a;emin olun ve yenileyin."
                           FontSize="10"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- YÃ¼kleniyor -->
            <StackPanel x:Name="LoadingState"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="TaranÄ±yor..."
                           FontSize="11"
                           Foreground="#888888"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Alt Bilgi -->
            <Border Grid.Row="2"
                    Background="#1A1A1A"
                    CornerRadius="0,0,12,12"
                    Padding="12,8">
                <TextBlock x:Name="StatusText"
                           Text="HazÄ±r"
                           FontSize="10"
                           Foreground="#666666"/>
            </Border>
        </Grid>
    </Border>
</Window>
